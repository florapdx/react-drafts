{
  "name": "@crossfield/content-editor",
  "version": "0.21.1",
  "description": "A React-based WYSIWYG editor",
  "main": "lib/index.js",
  "files": [
    "dist",
    "lib"
  ],
  "repository": "https://github.com/crossfield/toolkit-content-editor",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "webpack-dev-server --config webpack/config.dev.js",
    "clean": "rimraf ./dist",
    "build": "NODE_ENV=production npm run build:cjs && npm run build:umd",
    "build:cjs": "BABEL_ENV=commonjs babel ./src --out-dir lib",
    "build:umd": "webpack --config webpack/config.dist.js ./css/index.css ./src/index.js ./dist/content-editor.js",
    "watch": "webpack -w --config webpack/config.dev.js",
    "prepublish": "npm run clean && npm run build",
    "build:now": "npm run prepublish",
    "test": "mocha-webpack --opts config/webpack/test.config.opts",
    "watch:test": "npm run test -- -w"
  },
  "keywords": [
    "editor",
    "draft-js",
    "draftjs",
    "wysiwyg",
    "blog editor"
  ],
  "authors": [
    "@florapdx",
    "Team Crossfield"
  ],
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "babel-cli": "^6.24.0",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-1": "^6.22.0",
    "chai": "^3.5.0",
    "css-loader": "^0.26.1",
    "draft-js": "^0.10.0",
    "enzyme": "^2.7.1",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "extract-text-webpack-plugin": "^2.0.0-rc.3",
    "file-loader": "^0.10.1",
    "html-webpack-plugin": "^2.28.0",
    "jsdom": "^9.10.0",
    "mocha": "^3.2.0",
    "mocha-webpack": "^0.7.0",
    "postcss-loader": "^1.3.3",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-hot-loader": "^3.0.0-beta.6",
    "rimraf": "^2.5.4",
    "sinon": "^1.17.7",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.8",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.3.0",
    "webpack-node-externals": "^1.5.4"
  },
  "dependencies": {
    "draft-convert": "^1.4.2",
    "draft-js": "^0.10.0",
    "font-awesome": "^4.7.0",
    "immutable": "^3.8.1",
    "lodash.values": "^4.3.0",
    "react-dropzone": "^3.11.0"
  },
  "peerDependencies": {
    "react": "^15",
    "react-dom": "^15"
  }
}
